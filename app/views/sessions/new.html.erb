<% content_for :header do -%>
	<%= stylesheet_link_tag 'jquery.autocomplete.css' %>
	<%= javascript_include_tag 'autocomplete/jquery.ajaxQueue', 'jquery.autocomplete.min', :cache => 'autocomplete' %> 
<% end -%>      
	<script type="text/javascript" charset="utf-8">
		$(document).ready(function() {
	    	$("input#email").autocomplete("/users/auto_complete_for_user_email")
	  	});
	</script>
<h1>登录</h1>

<% form_tag session_path,:id => 'form' do -%>
<p><%= label_tag 'Email' %><br />
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag '密码' %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', '记住我' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

<p><%= submit_tag '提交' %></p>                        
<br />
<%=link_to '忘记密码?',forgot_password_users_path %>     
<% end -%>
