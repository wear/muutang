<% content_for :header do -%>                
  <%= include_tiny_mce_if_needed %>    
  <%= stylesheet_link_tag 'jquery-ui.custom' %>    
  <script type="text/javascript">    
	$(function() {
		$("#open_at").datepicker({minDate: "0d", 
        showOn: "both",buttonImage: '/images/icons/calendar.png',buttonImageOnly: true });
		$("#close_at").datepicker({minDate: "0d", 
        showOn: "both",buttonImage: '/images/icons/calendar.png',buttonImageOnly: true });
	});
  </script> 
<% end -%>

<%= form.input :name , :label => "名称"%>
<%= form.input :address, :label => "活动地点" %>
<%= form.input :desc, :label => "描述",:input_html => { :class => "mceEditor" },:hint => "活動基本資訊概述，例如：費用、場地、議程等" %>
<%= form.input :open_at,:as => :string,:input_html => {:id => 'open_at',:style => 'width:150px;'} %>
<%= form.input :close_at,:as => :string,:input_html => {:id => 'close_at',:style => 'width:150px;'} %>      
