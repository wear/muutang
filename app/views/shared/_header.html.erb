<div class='logo'>
   <%=link_to image_tag('logo.png'),root_path%>
</div> 
<div class='system_menu'>
	<%=link_to '首页','/' %>
</div>        

<div class='user_menu'> 
	<% if logged_in? -%>
	<%=link_to nickname_of(current_user),current_user %> 
	<% restrict_to "superuser" do %>
		<%=link_to '控制面板',admin_path %>
	<% end -%>   
	<%=link_to '设置',edit_user_profile_path(current_user) %>   
	<%=link_to '注销',logout_path %> 
	<% else -%>
	<%=link_to '登录',login_path %> 
	<%=link_to '注册',signup_path %>
	<% end %>
</div>