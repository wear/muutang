<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
	<title><%= '亩塘 | ' + h(@page_title) %></title>   
	<%= javascript_include_tag :defaults %> 
	<%= stylesheet_link_tag 'pretty-buttons','ui-theme','admin' %>   
	<%= yield :header %>            
</head>
<body>
	<div id="container">
	   <div id="header">
		<%= render :partial => 'shared/header' %>
	   </div>                    
	   <div id="body" class='ui-corner-all'> 
		 <%= render :partial => '/shared/notice' %> 
		                
		 <div id="navs"  class='ui-corner-all'>        
		<h4>管理工具</h4>
	   	   <div class='nav_box'>
			<ul>
			  <%=topnav_tab "管理帖子(#{Post.count},#{Comment.count})",:url => admin_posts_path,:section => 'manage_post'  %>
			  <%=topnav_tab '管理分类',:url =>admin_categories_path,:section => 'manage_cate' %>
			  <%=topnav_tab "管理用户(#{User.count})",:url =>admin_users_path,:section => 'manage_user'  %>
			  <%=topnav_tab '管理权限',:url =>admin_roles_path,:section => 'manage_role'  %> 
			  <%=topnav_tab "管理工作机会(#{Job.visible.count},#{Job.unvisible.count})",:url =>admin_jobs_path,:section => 'manage_job'  %> 
			 <div style="clear:both"></div>          
			</ul>
	   	 	</div>     
	   	 </div>
	 <div id="content">  
		 <%= yield :bread %>       
		   <%= yield %> 
		</div> 
		  <div style="clear:both"></div>    
	   </div> 
 	<%=render :partial => '/shared/footer' %>  
	</div>
</body> 
</html>