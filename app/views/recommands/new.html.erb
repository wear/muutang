<h1 style='text-align:center;'>给组员推荐阅读</h1>
<div class='center_box'>   
	<%= error_messages_for :recommand %>    
	<b>标题</b>
	<p><%= params[:title] %></p>
  	<b>链接</b> 
	<p><%=link_to truncate(params[:url],:length => 50),params[:url]%></p> 
	
	<% form_for @recommand do |f| %>                                 
	  <%= f.hidden_field :title,:value => params[:title],:label => '标题' %>
	  <%= f.hidden_field :url,:value => params[:url] %>
	<label>你的描述</label>
	  <%= text_area_tag :desc %>
	  <p>
	    <%= f.submit '提交' %>
	  </p>
	<% end %>

</div>

